
<div class="card article-link" style="width: 18rem;">
  <%= link_to article, class: 'article-link' do %>
    <% if article.image.attached? %>
      <%= image_tag article.image, class: 'article-image' %>
    <% else %>
      <%= image_tag 'noimage.jpg', class: 'article-image' %>
    <% end %>
    <div class="card-body">
      <h5 class="card-title text-center article-content"><%= article.title %></h5>
      <% if article.summary.empty? %>
        <%= simple_format article.content.slice(0, 30), class: 'card-text text-center article-content' %>
      <% else %>
        <%= simple_format article.summary, class: 'card-text text-center article-content' %>
      <% end %>  
    </div>
  <% end %>
</div>