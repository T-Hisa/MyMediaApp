<div class="d-flex align-items-center top-margin-sm article-title">
  <h1 class="article-title-index">
    <% if @articles.count == 0 %>
      <%= t('.no-article-list') %>
    <% else %>
      <%= t('.article-list') %>
    <% end %>
  </h1>
</div>
<ul class="d-flex flex-article">
  <%= render partial: 'article', collection: @articles %>
</ul>
<% if @pagy.vars[:count] > 6 %>
  <div class="d-flex justify-content-center mb-2">
    <%== pagy_bootstrap_nav(@pagy) %>
  </div>
<% end %>
