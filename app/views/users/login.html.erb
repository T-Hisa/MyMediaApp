<div class="d-flex align-items-center top-margin-sm">
  <h1 class="">ログイン</h1>
</div>
<div class="container">
  <%= form_with scope: :session, url: login_path  do |f| %>
    <%= auto_email_field f %>
    <%= auto_password_field f, :password %>
    <%= auto_password_field f, :password_confirmation %>
    <%= f.submit 'ログイン', class: 'btn btn-primary' %>
  <% end %>
</div>